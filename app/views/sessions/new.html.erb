<div class="container mt-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Login</h2>

  <%= form_with url: user_session_path, method: :post, local: true, class: "needs-validation" do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
    </div>

    <div class="d-grid">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
