<div class="container mt-5">
  <h2 class="mb-4 text-center text-uppercase text-dark">Your Orders</h2>

  <% if @order_items.any? %>
    <% @order_items.each do |order_item| %>
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title text-primary"><%= order_item.menu_item.name %></h5>

          <p class="card-text">
            <strong>Price:</strong> â‚¹<%= order_item.menu_item.price %><br>
            <strong>Status:</strong>
            <span class="badge bg-<%= order_item.order.status == 'delivered' ? 'success' : 'warning' %>">
              <%= order_item.order.status.titleize %>
            </span><br>
            <strong>Ordered by:</strong> <%= order_item.order.user.name %>
          </p>

          <div class="d-flex flex-wrap gap-2 mt-3">
            <%= link_to "Your Reviews", restaurant_path(current_user), class: "btn btn-outline-info" %>

            <%= button_to "Mark as Delivered", restaurant_order_path(order_item.order), method: :patch, class: "btn btn-primary", data: { confirm: "Mark this order as Delivered?" } %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info text-center">
      No orders received yet.
    </div>
  <% end %>
</div>
